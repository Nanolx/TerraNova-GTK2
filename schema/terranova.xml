<?xml version="1.0" encoding="UTF-8"?>
<engine module_name="terranova" long_name="TerraNova" schema_version="0.1">

  <metainfo>
    <version>0.10</version>
    <website>http://www.nanolx.org</website>
    <author>
      <name>Christopher Roy Bratusek</name>
      <email>&lt;jpberlin@gmx.de&gt;</email>
    </author>
  </metainfo>

  <option name="animation" type="boolean" default="TRUE">
    <long_name>Animation</long_name>
    <description>Enable or Disable Animations</description>
  </option>

  <option name="contrast" type="real" default="1.0">
    <minimum>0</minimum>
    <maximum>2</maximum>
    <precision>0.1</precision>
    <long_name>Contrast</long_name>
    <description>Contrast</description>
  </option>

  <option name="radius" type="real" default="1.1">
    <minimum>1.0</minimum>
    <maximum>10.0</maximum>
    <precision>0.1</precision>
    <long_name>Radius</long_name>
    <description>The Roundness of Widgets like Buttons</description>
  </option>

  <option name="menubarstyle" type="enumeration" default="2">
    <long_name>Menubar Style</long_name>
    <description>The Menubar Style</description>
    <enumeration value="0">
      <label>Glossy Style</label>
    </enumeration>
  </option>

  <option name="toolbarstyle" type="enumeration" default="2">
    <long_name>Toolbar Style</long_name>
    <description>The Toolbar Style</description>
    <enumeration value="0">
      <label>Glossy Style</label>
    </enumeration>
  </option>

  <option name="style" type="enumeration" default="0">
    <long_name>Widget Style</long_name>
    <description>The Widget Style</description>
    <enumeration value="CLARIUS">
      <label>CLARIUS Style</label>
    </enumeration>
    <enumeration value="AQUARIUS">
      <label>AQUARIUS Style</label>
    </enumeration>
    <enumeration value="CANDY">
      <label>CANDY Style</label>
    <enumeration>
  </option>

  <option name="scale_trough_size" type="real" default="6">
    <minimum>1.0</minimum>
    <maximum>14.0</maximum>
    <precision>1.0</precision>
    <long_name>Scale Trough Size</long_name>
    <description>Scale Trough Size</description>
  </option>

  <option name="trough_visible" type="enumeration" default="0">
    <long_name>Trough under Scrollbarsliders</long_name>
    <description></description>
    <enumeration value="0">
      <label>No trough drawn</label>
    </enumeration>
    <enumeration value="1">
      <label>trough drawn</label>
    </enumeration>
  </option>

  <option name="tooltip_style" type="enumeration" default="1">
    <long_name>Gradient on the Tooltips</long_name>
    <enumeration value="0">
      <label>Curved Gradient</label>
    </enumeration>
    <enumeration value="1">
      <label>None</label>
    </enumeration>
  </option>

  <option name="mw_gradient" type="enumeration" default="0">
    <long_name>MainWindow Gradient</long_name>
    <description>The Gradient Style</description>
    <enumeration value="0">
      <label>Plain</label>
    </enumeration>
    <enumeration value="1">
      <label>Horizontal Gradient</label>
    </enumeration>
    <enumeration value="2">
      <label>Diagonal Gradient</label>
    </enumeration>
  </option>

  <option name="scrollbarstyle" type="enumeration" default="2">
    <long_name>Scrollbar Style</long_name>
    <description>The Scrollbar Style</description>
    <enumeration value="0">
      <label>Striped Scrollbar</label>
    </enumeration>
    <enumeration value="1">
      <label>Arrowed Scrollbar</label>
    </enumeration>
    <enumeration value="2">
      <label>Plain Scrollbar</label>
    </enumeration>
  </option>

  <option name="progbar_style" type="enumeration" default="1">
    <long_name>Progressbar Style</long_name>
    <description>The Progressbar Style</description>
    <enumeration value="0">
      <label>Striped Progressbar</label>
    </enumeration>
    <enumeration value="1">
      <label>Arrowed Progressbar</label>
    </enumeration>
    <enumeration value="2">
      <label>Plain Progressbar</label>
    </enumeration>
  </option>

  <option name="progbar_to_left" type="enumeration" default="1">
    <long_name>Progressbar Direction</long_name>
    <description>The Progressbar Direction</description>
    <enumeration value="0">
      <label>left to right</label>
    </enumeration>
    <enumeration value="1">
      <label>right to left</label>
    </enumeration>
  </option>

  <option name="random_effect" type="enumeration" default="0">
    <long_name>Random Effects</long_name>
    <description>Random Effects</description>
    <enumeration value="0">
      <label>Disable Random Effects</label>
    </enumeration>
    <enumeration value="1">
      <label>Enable Random Stripes</label>
    </enumeration>
    <enumeration value="2">
      <label>Enable Random Bubbles</label>
    </enumeration>
  </option>

  <option name="random_opacity" type="real" default="0.2">
    <minimum>0.0</minimum>
    <maximum>1.0</maximum>
    <precision>0.01</precision>
    <long_name>Random Effect Opacity</long_name>
    <description>The Opacity of the Random Effects</description>
  </option>

  <option name="grip_style" type="enumeration" default="0">
    <long_name>Grip Style</long_name>
    <description>Grip Style for Active Buttons</description>
    <enumeration value="0">
      <label>Border</label>
    </enumeration>
    <enumeration value="1">
      <label>Grip Triangle</label>
    </enumeration>
    <enumeration value="2">
      <label>Border and Grip Triangle</label>
    </enumeration>
  </option>

  <option name="grip_opacity" type="real" default="0.2">
    <minimum>0.0</minimum>
    <maximum>1.0</maximum>
    <precision>0.01</precision>
    <long_name>Grip Style Opacity</long_name>
    <description>The Opacity of the active button grips</description>
  </option>

  <option name="grip_pos" type="enumeration" default="0">
    <long_name>Grip Position</long_name>
    <description>Position of the grip on buttons</description>
    <enumeration value="0">
	    <label>bottom-right</label>
    </enumeration>
    <enumeration value="1">
	    <label>bottom-left</label>
    </enumeration>
    <enumeration value="2">
	    <label>top-right</label>
    </enumeration>
    <enumeration value="3">
	    <label>top-left</label>
    </enumeration>
  </option>

  <option name="button_effect" type="enumeration" default="0">
    <long_name>Button Effect</long_name>
    <description>Button Effect</description>
    <enumeration value="0">
      <label>Plain</label>
    </enumeration>
    <enumeration value="1">
      <label>Curve</label>
    </enumeration>
    <enumeration value="2">
      <label>Double Triangle</label>
    </enumeration>
  </option>

  <option name="indicator_style" type="enumeration" default="0">
    <long_name>Indicator Style</long_name>
    <description>Indicator Style for Checkbuttons</description>
    <enumeration value="0">
      <label>Check</label>
    </enumeration>
    <enumeration value="1">
      <label>Plus</label>
    </enumeration>
    <enumeration value="2">
      <label>Cross</label>
    </enumeration>
  </option>

  <option name="trough_style" type="enumeration" default="0">
    <long_name>Trough Style</long_name>
    <description>Trough Style for Scrollbars</description>
    <enumeration value="0">
      <label>Smooth Gradient</label>
    </enumeration>
    <enumeration value="1">
      <label>Sharp Gradient</label>
    </enumeration>
  </option>

  <option name="slider_style" type="enumeration" default="0">
    <long_name>Slider Style</long_name>
    <description>Slider Style for Scales</description>
    <enumeration value="0">
      <label>Normal on Hover</label>
    </enumeration>
    <enumeration value="1">
      <label>Highlight on Hover</label>
    </enumeration>
  </option>

  <option name="button_gradient" type="enumeration" default="0">
    <long_name>Button Gradient</long_name>
    <description>Gradient for Buttons</description>
    <enumeration value="0">
      <label>Horizontal</label>
    </enumeration>
    <enumeration value="1">
      <label>Vertical</label>
    </enumeration>
  </option>

  <option name="draw_unselected" type="enumeration" default="0">
    <long_name>Draw unselected TreeView cells</long_name>
    <description>Draw unselected TreeView cells</long_name>
    <enumeration value="0">
      <label>No</label>
    </enumeration>
    <enumeration value="1">
      <label>Yes</label>
    </enumeration>
  </option>

</engine>
